@model List<MultiShop.DtoLayer.CatalogDtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Kategori İşlemleri";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="pull-left">
                    <h4>Kategori Listesi</h4>
                    <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                </div>        
                <div class="pull-right" style="padding-top:1rem;">
                    <a class="btn btn-success"> Ekle </a>
                </div>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Kategoriye Ait Ürünler</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                    <td><a class="btn btn-warning"> Ürünleri Görüntüle </a></td>
                                    <td><a class="btn btn-danger"> Sil </a></td>
                                    <td><a class="btn btn-success"> Düzenle </a></td>

                                </tr>
                            }
                            

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

