
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}


    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Home</a>
                    <a class="breadcrumb-item text-dark" href="#">Shop</a>
                    <span class="breadcrumb-item active">Shop List</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Shop Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-4">
            @await Component.InvokeAsync("_PriceFilterProductList")
            @await Component.InvokeAsync("_ColorFilterProductList")
            @await Component.InvokeAsync("_SizeFilterProductList")
            </div>

            <div class="col-lg-9 col-md-8">
                <div class="row pb-3">
                    <div class="col-12 pb-1">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div>
                                <button class="btn btn-sm btn-light"><i class="fa fa-th-large"></i></button>
                                <button class="btn btn-sm btn-light ml-2"><i class="fa fa-bars"></i></button>
                            </div>
                            <div class="ml-2">
                            @await Component.InvokeAsync("_SortingProductList")

                            @await Component.InvokeAsync("_ProductCountProductList")

                            </div>
                        </div>
                    </div>
                @await Component.InvokeAsync("_ProductList")

                @await Component.InvokeAsync("_PaginationProductList")
     
                </div>
            </div>
        </div>
    </div>



